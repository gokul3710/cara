    <section class="login">
        <div class="container login-container">
            <h2 style="font-size: 2rem;">Create Your Account</h2>
            {{#if signupErr}}
            <div class="error">
                <p class="error-msg">{{signupErr}}</p>
                <a class="error-close" href=""><i class="fa-solid fa-xmark"></i></a>
            </div>
            {{/if}}
            <form class="contact-form" id="submit-form" action="/signup" method="post">
                <div class="form-name">
                    <input type="text" name="firstName" placeholder="First Name" required>
                    <input type="text" name="lastName" placeholder="Last Name" required>
                  </div>
                  <input type= "email" name="email" placeholder="Your Email Address" required>
                  <input type="password" name="password" placeholder="Password" required>
                  <button type="submit" class="btn btn-primary">Submit</button>
                  <a href="/login"><h5>Already have an account? <span style="color: var(--color-primary);">Login</span></h5></a>
            </form>
        </div>
</section>