<section class="edit-user">
    <div class="container edit-user-container">
        <h2>Edit Account Details</h2>
        {{#if update}}
        <p>{{update}}</p>
        {{/if}}
        <form class="edit-user-form" id="submit-form" action="/edit-user" method="post" enctype="multipart/form-data">
            <div class="profile-image" style="padding-bottom: 3rem;" >
                <a onclick="inputImg()">
                    {{#if user.profileImage}}
                    <img src="./images/user-images/{{user._id}}.png" alt="" style="width: 10rem;height: 10rem;border-radius:  50%;cursor:pointer;" id="userImgView">
                    {{else}}
                    <img src="./images/people/dummy.png" alt="" style="width: 10rem;height: 10rem;border-radius:  50%;cursor:pointer;" id="userImgView">
                    {{/if}}
                    </a>
                <input type="file" name="image" class="form-control" onchange="viewimage(event)" id="userImgInput" hidden>
            </div>
            <div class="payment-address">
                <div class="form-name">
                    <input type="text" name="firstName" placeholder="First Name" required value="{{user.firstName}}">
                    <input type="text" name="lastName" placeholder="Last Name" required value="{{user.lastName}}">
                </div>
                <div class="form-name">
                    <input type="email" name="email" placeholder="Your Email Address" required value="{{user.email}}">
                    <input type="tel" name="phone" placeholder="Phone Number"  value="{{user.phone}}">
                </div>
                
                
                <input type="text" name="address" placeholder="Address"  value='{{user.address.houseName}}'>
                <div class="form-name">
                    <input type="text" name="city" placeholder="City"  value='{{user.address.city}}'>
                    <input type="text" name="state" placeholder="State"  value='{{user.address.state}}'>
                </div>
                <div class="form-name">
                    <input type="number" name="pincode" placeholder="Pincode"  value='{{user.address.pincode}}'>
                    <input type="text" name="country" placeholder="Country" value="India" >
                </div>
                <input type="text" name="userId" placeholder="" value="{{user._id}}" required hidden >
                <button type="submit" class="btn btn-primary" >Update</button>
                <a href="/delete-user?id={{user._id}}" class="btn btn-primary" style="background: red;" >Delete Account <i class="fa-solid fa-trash"></i></a>
            </div>
        </form>
    </div>
</section>

<script>
    function viewimage(event){
        document.getElementById('userImgView').src = URL.createObjectURL(event.target.files[0])
    }


    function inputImg(){
        document.getElementById('userImgInput').click()
    }
</script>