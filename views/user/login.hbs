<section class="login">
    <div class="container login-container">
        <h2>Login</h2>
        {{#if loginErr}}
            <div class="error">
                <p class="error-msg">{{loginErr}}</p>
                <a class="error-close" href=""><i class="fa-solid fa-xmark"></i></a>
            </div>
        {{/if}}
        <form class="contact-form" id="submit-form" action="/login" method="post">
            <input type="email" name="email" placeholder="Your Email Address" required>
            <input type="password" name="password" placeholder="Password" required>
            <button type="submit" class="btn btn-primary">Submit</button>
            <a href="/signup">
                <h5>Don't have an account? <span style="color: var(--color-primary);">Create one!</span></h5>
            </a>
        </form>
    </div>
</section>
<script>
    document.querySelector('.error-close').addEventListener('click',()=>{
        document.querySelector('.error').style.display = "none"
    })
</script>